import { GraphQLID, GraphQLInputObjectType, GraphQLList, GraphQLString } from 'graphql';
import CountryInput from '../Country/CountryInput';

const CountryClusterInput = new GraphQLInputObjectType({
    name: 'countryClusterInput',
    fields: () => ({
        id: {
            type: GraphQLID
        },
        code: {
            type: GraphQLString
        },
        name: {
            type: GraphQLString
        },
        countries: {
            type: GraphQLList(CountryInput)
        }
    })
});
export default CountryClusterInput;
