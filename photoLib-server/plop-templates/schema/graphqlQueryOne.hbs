import { GraphQLString } from 'graphql';
import query from '../../utils';
import CountryCluster from './ContryCluster';
import { Context } from '../../Types';

const CountryClusterQuery = {
    type: CountryCluster,
    args: {
        id: {type: GraphQLString}
    },
    resolve(object, arguments_: { id: string }, context: Context) {
        return query(
            `SELECT * FROM [Registration].[CountryCluster] WHERE [CountryClusterID] = '${arguments_.id}';`,
            context.sqlInstance,
            true
        );
    }
};
export default CountryClusterQuery;
